
 .select_box{
  background: #fff;
  width: 186rpx;
  position: relative;
 }
 .select{
  box-sizing: border-box;
  width: 100%;
  height: 60rpx;
  border:1px solid #efefef;
  border-radius: 10rpx;
  display: flex;
  align-items: center;
 }
 .select_text{
  font-size: 28rpx;
  flex: 1;
 }
 .select_img{
  width: 40rpx;
  height: 40rpx;
  display: block;
  transition:transform 0.3s;
 }
 .select_img_rotate{
  transform:rotate(-90deg); 
 }
 .option_box{
  position: absolute;
  top: 60rpx;
  width: 100%;
  border:1px solid #efefef;
  box-sizing: border-box;
  height: 0;
  overflow-y: auto;
  border-top: 0;
  background: #fff;
	transition: height 0.3s;
	background-color: white;
	box-shadow: 0 0 10rpx black;
 }
 .option{
  display: block;
  line-height: 40rpx;
  font-size: 30rpx;
  border-bottom: 1px solid #efefef;
  padding: 10rpx;
 }