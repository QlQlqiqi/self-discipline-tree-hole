page {
	height: 100%
}

page::after{
  content: '';
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 164rpx;
  box-shadow: 0 0 20rpx 0 rgba(132, 132, 132, .18);
  background-color: white;
  z-index: 9999;
}

